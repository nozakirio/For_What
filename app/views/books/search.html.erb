<h1>検索結果</h1>
<% if @results.present? %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>著者名</th>
        <th>出版社</th>
        <th>読んだ人</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |result| %>
      <tr>
        <td><%= link_to image_tag(result.small_image_url),result.item_url %></td>
        <td><%= link_to result.title,result.item_url %></td>
        <td><%= result.author %></td>
        <td><%= result.publisher_name %></td>
        <td>xx人</td>
        <td><%= link_to "読みたい本に登録",new_post_path %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
<div id="user_<%= @user.id %>">
  <div class="favorite-count_user">
    <%= render 'users/profile', user: @user %>
   </div>

<h1>本を探す</h1>
  <%= form_with model: @book,url: search_books_path, method: :get, local: true do |f| %>
    <%= f.select :model, options_for_select({ "タイトル" => "title", "著者" => "author" }) %>
    <%= text_field :keyword, "", placeholder:'書籍タイトル、著者', size: 40 %>
    <%= f.submit "検索" %>
  <% end %>

<h1>読みたい本</h1>
<table class="table">
  <thead>
    <tr>
      <th>登録日</th>
      <th>タイトル</th>
      <th>著者名</th>
    </tr>
  </thead>
  <tbody>
    <% @want_reads.each do |want_read| %>
      <tr>
        <td><%= want_read.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= want_read.book.title %></td>
        <td><%= want_read.book.author %></td>
        <td data-turbolinks="false"><%= link_to "投稿詳細", post_path(want_read.post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>読んだ本</h1>
<div class="table">  
  <div class="table_line">
    <div class="box">読了日</div>
    <div class="box">タイトル</div>
    <div class="box">著者名</div>
    <div class="box">評価</div>
    <div class="box">リンク</div>
  </div>
  <div data-turbolinks="false">
    <% @have_reads.each_with_index do |have_read,index| %>
    <div class="table_line">
      <div class="box"><%= have_read.updated_at.strftime('%Y/%m/%d') %></div>
      <div class="box"><%= have_read.book.title %></div>
      <div class="box"><%= have_read.book.author %></div>
      <div class="box" id="star-<%= index %>" data-score="<%= have_read.post.star %>"></div>
      <div class="box"><%= link_to "投稿詳細", post_path(have_read.post) %></div>
    </div>
    <% end %>
  </div>
</div>

<script>
  $(function () {
    for (var i=0; i<"<%= @have_reads.size %>"; i++) {
    $(`#star-${i}`).raty({
      size: 36,
      starOff: "/assets/star-off.png",
      starOn: "/assets/star-on.png",
      scoreName: "score"
    });
    };
  });
</script>
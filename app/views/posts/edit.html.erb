<div class="row">
  <div class="col-md-3">
    <p><%= @book.title %></p>
    <p><%= @book.author %></p>
    <p><%= image_tag(@book.book_image_id) %></p>
    <p><%= @book.publication_date %></p>
  </div>
  
  <div class="col-md-9">
    <h2>読んだ本に登録する</h2>
    <p id="notice"><%= notice %></p>
      <%= form_with model: @post, url: post_path,  method: :patch, local: true do |f| %>
        <div data-turbolinks="false">
          <div id="rating-form">
            <%= f.label :star %>
          </div>
        </div>
        <%= f.text_field :comment %>
        <%= f.submit "内容を保存" %>
      <% end %>
  </div>
</div>
  
<script>
  $(function () {
    $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'post[star]'
    });
  });
</script>
  
<div class="row">
  <div class="col-md-3">
    <%= render 'users/profile', user: @user %>
  </div>
  
  <div class="col-md-9">
    <h2>お気に入り投稿一覧</h2>
    <div class="table">
      <div class="table__line-title">
        <div class="table__day ">ユーザ名</div>
        <div class="table__title">タイトル</div>
        <div class="table__author">著者名</div>
        <div class="table__link"></div>
      </div>
      <div data-turbolinks="false">
        <% @favorites.each do |favorite| %>
          <div class="table__line">
            <div class="table__day"><%= favorite.post.user.name %></div>
            <div class="table__title"><%= favorite.post.book.title %></div>
            <div class="table__author"><%= favorite.post.book.author %></div>
            <div class="table__link"><%= link_to "投稿詳細", post_path(favorite.post) %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
</div>
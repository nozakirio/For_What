<div class="row">
  <div id="post_<%= @post.id %>">
    <div class="favorite-count col-md-3">
      <%= render 'users/profile', user: @post.user %>
    </div>
    <div class="col-md-7 book">
      <div class="book__info text-center">Book Information</div>
      <div class="book__content">
        <p class="book__image"><%= image_tag(@post.book.book_image_large_id) %></p>
        <div class="book__text">
          <p class="book__title"><%= @post.book.title %></p>
          <p class="book__author"><%= @post.book.author %></p>
          <p class="book__date">発売日：<%= @post.book.publication_date %></p>
        </div>
      </div>

      <% if @post.star == nil %>
        <h2>読みたい本詳細</h2>
        <h4>目的・背景</h4>
        <p><%= @post.reason %></p>
      <% else %>
        <h2>読んだ本詳細</h2>
        <h3>目的・背景</h3>
        <p><%= @post.reason %></p>
        <div data-turbolinks="false">
        <div id="star" data-score="<%= @post.star %>"></div>
        </div>
        <p>コメント<%= @post.comment %></p>
      <% end %>

      <div class="favorite-btn">
        <%= render 'favorites/favorite-btn', post: @post %>
      </div>

      <% if @post.user == current_user && @post.star != nil %>
        <%= link_to "読んだ本から削除", post_path(@post), method: :delete, class: 'btn btn-del' %>
      <% elsif @post.user == current_user && @post.star == nil %>
        <%= link_to "読んだ本に登録", edit_post_path(@post), class: 'btn btn-link'%>
        <%= link_to "読みたい本から削除", post_path(@post), method: :delete, class: 'btn btn-del' %>
      <% elsif @post.user != current_user && AdminBook.where(user_id: current_user.id,book_id: @post.book.id,have_read: true).present? %>
        読んだ本に登録済み
      <% else @post.user != current_user && @post.favorited_by?(current_user) %>
        <%= link_to "読みたい本に登録", new_post_path(@post.book), class: 'btn btn-link' %>
      <% end %>
    </div>
  </div>
</div>